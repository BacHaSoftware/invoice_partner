<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bh_invoice_view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.invoice</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group" position="inside">
                <field name="type"/>
                <field name="invoice_currency"/>
                <field name="num_invoice" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
